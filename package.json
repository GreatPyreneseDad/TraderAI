{
  "name": "trader-ai",
  "version": "1.0.0",
  "description": "Unified Market Intelligence System combining ECNE Data River, GCT Market Sentiment, and Claude AI",
  "main": "src/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:dashboard\"",
    "dev:backend": "nodemon src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:dashboard": "cd dashboard && npm run dev",
    "build": "npm run build:backend && npm run build:frontend && npm run build:dashboard",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "build:dashboard": "cd dashboard && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "prisma migrate deploy",
    "db:verify": "node scripts/verify-db.js",
    "prepare": "husky install"
  },
  "keywords": [
    "trading",
    "market-intelligence",
    "ai",
    "ecne",
    "gct",
    "claude"
  ],
  "author": "TraderAI Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@prisma/client": "^5.15.0",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "socket.io": "^4.7.5",
    "winston": "^3.13.0",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "prisma": "^5.15.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}